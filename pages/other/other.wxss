/* pages/other/other.wxss */
.video{
  width: 100%;
  height: 400rpx;
}
.video video{
  width: 100%;
  height: 100%;
}
.sendDanmu{
  width: 100%;
  height: 100rpx;
  background-color: rgba(68, 67, 67, 0.89);
  display: flex;
  align-items: center;
  justify-content: center; 
}
.sendDanmu input{
  width: 80%;
  height: 70%;
  border-radius: 100rpx;
  border: 1rpx solid #8e8e8f;
  background-color: #8e8e8f;
  font-size: 0.8rem;
  color: #d1d1d6;
  padding-left: 25rpx;
}
.good{
  width: 100%;
  height: 170rpx;
}
.authorInfo{
  width: 100%;
}
.videoInfo{
  width: 100%;
  height: 100rpx;
}
.icon{
  width: 50rpx;
  height: 50rpx;
  float: right;
}
.smallIcon{
  width: 30rpx;
  height: 30rpx;
}
.clicks{
  font-size: 0.8rem;
  margin: auto 0;
  padding: 3rpx;
}
.midIcon{
  width: 100rpx;
  height: 100rpx;
}
.firstTitle{
  margin-left: 40rpx;
  margin-bottom: 20rpx;
  color: #c1c2c5;
  font-size: 0.8rem;
}
.catelogue{
  width: 90%;
  margin: 0 auto;
}
.first{
  font-size: 40rpx;
  padding: 20rpx;
}
.writeConment{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: rgb(230, 230, 230);
  display: flex;
  align-items: center;
  justify-content: center; 
}
.writeConment input{
  width: 80%;
  height: 70%;
  border-radius: 100rpx;
  border: 1rpx solid #c1c2c5;
  background-color: #cbccce;
  font-size: 0.8rem;
  padding-left: 25rpx;
}
.btn{
  font-size: 0.8rem;
  color: #b7b8b9;
  margin-left: 10rpx;
}
.detailDesc{
  width: 90%;
  margin: 0 auto;
  font-size: 0.8rem;
  color: #a7a8a8fa;
  overflow: hidden;
}
/* 二级评论区 */
.secondConment{
  width: 100%;
  height: 811rpx;
  position: fixed;
  bottom: 0;
  background-color: white;
  overflow-y: scroll;
}
.head{
  height: 80rpx;
  display: flex;
  flex-direction: row;
}
.headone,.headtwo{
  display: flex;
  width: 50%;
  height: 100%;
  font-size: 0.8rem;
}
.conmentTitle{
  position: fixed;
  margin-left: 30rpx;
  top: 18rpx;
}
.closed{
  width: 43rpx;
  height: 43rpx;
}
.closeBtn{
  margin-right: 0;
  background-color: #fff;
}
.closeBtn::after{ border: none; }