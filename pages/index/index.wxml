<!--index.wxml-->
<view class="pageContainer  bgC">
  <!--search-->
  <view class="search flex">
    <view class="search-left">
      <image src="../../images/search.png"></image>
      <input placeholder="飞软云课堂" placeholder-class="search-placeholder"/>
    </view>
    <view class="search-right flex-item" bindtap="upper">
      <image src="../../images/email.png" style='width:50%;'></image>
    </view>
  </view>
  <!-- 轮播图 -->
  <swiper class='bannerbox' autoplay='true' indicator-dots='true' indicator-active-color='white' interval='3000'>
    <block wx:for="{{banner.bannerimg}}"  wx:for-index="idx" wx:for-item="item">
      <swiper-item>
        <image src="{{item.imgurl}}" class="bannerimg {{item.class}}"></image>
      </swiper-item>
    </block>
  </swiper>
  <!-- ad -->
  <view class="ad flex">
    <block wx:for="{{ad}}" wx:for-item="item">
      <navigator url="{{hotCourse[0].navigate}}">
        <image src="{{item.imgurl}}"></image>
      </navigator>
    </block>
  </view>
  <!--courses grow-->
  <view class="course-grp flex" >
      <view class="course-grp-name flex">
        <text>热度排行榜</text>
        <navigator>更多 >;</navigator>
      </view>
      <view class="course-grp-item flex" wx:if='{{hasCourse}}'>
        <block wx:for="{{hotCourse}}" wx:for-item="item">
          <navigator url="{{item.navigate}}" class="flex flex-col">
            <image src="{{item.picture}}"></image>
            <text>{{item.videoName}}</text>
            <text>￥ {{item.price}}</text>
          </navigator>
        </block>
      </view>
  </view>
  <!--全部课程-->
  <view class="navigator-course" bindtap='refreshResource'>
    <text>{{moreCourses.title}}</text><image src='{{moreCourses.icon}}'></image>
  </view>
</view>
